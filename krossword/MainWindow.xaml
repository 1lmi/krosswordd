<Window x:Class="krossword.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:krossword"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1050">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="150" />
        </Grid.ColumnDefinitions>

        <Grid x:Name="grid" Grid.Column="0" Loaded="grid_Loaded">
        </Grid>

        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Число слов" Margin="0,0,0,5" TextAlignment="Center" />
            <TextBox x:Name="WordsCount" Width="130" Margin="0,0,0,10" />
            <Button Width="130" Height="37" Click="GenerateButton_Click" Margin="0,0,0,10">
                <TextBlock TextWrapping="Wrap" Text="Сгенерировать кроссворд" TextAlignment="Center" />
            </Button>
            <Button Width="130" Height="37" Click="Button_Click">
                <TextBlock TextWrapping="Wrap" TextAlignment="Center" ><Run Language="ru-ru" Text="Отчистит"/><Run Text="ь кроссворд"/></TextBlock>
            </Button>

        </StackPanel>
    </Grid>
</Window>
